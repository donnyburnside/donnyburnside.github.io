<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{ metadata.title | escape }}</title>
    <meta name="description" content="{{ metadata.description | escape }}">

    <script type="text/javascript">
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    </script>

    <link rel="stylesheet" href="{{ '/static/app.css' | url }}">

    {%- if env == 'production' -%}
      <!-- Production-only code such as tracking scripts, etc -->
    {%- endif -%}
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <nav class="flex-none" role="navigation">
        <div class="w-full max-w-6xl mx-auto px-4 flex flex-row flex-nowrap items-center">
          {%- if page.url == '/' -%}
            <span>
              {{- metadata.title | escape -}}
            </span>
          {%- else -%}
            <a href="{{ '/' | url }}" rel="home">
              {{- metadata.title | escape -}}
            </a>
          {%- endif -%}
          <div class="ml-auto" role="menubar">
            <a class="{% if page.url contains '/about/' %}is-current{% endif %}" href="{{ '/about/' | url }}" accesskey="a" role="menuitem">
              {{- 'About' | escape -}}
            </a>
            <a class="{% if page.url contains '/blog/' %}is-current{% endif %}" href="{{ '/blog/' | url }}" accesskey="b" role="menuitem">
              {{- 'Blog' | escape -}}
            </a>
            <a class="{% if page.url contains '/contact/' %}is-current{% endif %}" href="{{ '/contact/' | url }}" accesskey="c" role="menuitem">
              {{- 'Contact' | escape -}}
            </a>
          </div>
        </div>
      </nav>

      <main class="flex-grow" role="main">
        {{- content | safe -}}
      </main>

      <footer class="flex-none" role="contentinfo">
        <div class="w-full max-w-6xl mx-auto px-4">
          {% comment %}
          {%- include social-nav -%}
          <hr />
          {% endcomment %}
          Copyright &copy; {{ 'now' | date: '%Y' }} {{ metadata.title | escape }}.
        </div>
      </footer>
    </div>

    <div style="height: 0; overflow: hidden;">
      {%- include icon-spritesheet -%}
    </div>

    <script src="{{ '/static/app.js' | url }}"></script>
  </body>
</html>