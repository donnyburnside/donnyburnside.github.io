<form>
  <div class="flex flex-row flex-wrap -mx-4">
    <div class="w-full mb-8 px-4">
      <label class="label" for="name">{{ 'Name' | escape }}</label>
      <input class="input" id="name" type="text" />
    </div>
    <div class="w-full md:w-1/2 mb-8 px-4">
      <label class="label" for="email">{{ 'E-Mail' | escape }}</label>
      <input class="input" id="email" type="email" />
    </div>
    <div class="w-full md:w-1/2 mb-8 px-4">
      <label class="label" for="phone">{{ 'Phone' | escape }}</label>
      <input class="input" id="phone" type="tel" />
    </div>
    <div class="w-full mb-8 md:mb-8 px-4">
      <label class="label" for="message">{{ 'Message' | escape }}</label>
      <textarea class="input" id="message" rows="5"></textarea>
    </div>
    <div class="w-full md:w-1/2 md:self-center mb-8 px-4">
      
    </div>
    <div class="w-full md:w-1/2 md:self-center px-4 md:text-right">
      <button class="btn" type="submit">
        <span>{{ 'Send' | escape }}</span>
      </button>
    </div>
  </div>
</form>